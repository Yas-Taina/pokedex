<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/pokedex_red</item>
        <item name="android:statusBarColor">@color/pokedex_red</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/pokedex_red</item>

        <item name="colorPrimary">@color/pokedex_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="actionOverflowMenuStyle">@style/Pokedex.OverflowMenu</item>
        <item name="popupMenuStyle">@style/Pokedex.PopupMenu</item>
    </style>

    <style name="Theme.Pokedex" parent="Base.Theme.Pokedex" />


    <style name="Pokedex.MenuText" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14dp</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pokedex.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_pokedex_menu</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:itemTextAppearance">@style/Pokedex.MenuText</item>
        <item name="android:dropDownListViewStyle">@style/Pokedex.MenuDividerStyle</item>
    </style>

    <style name="Pokedex.MenuDividerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#E0E0E0</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="Pokedex.OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_pokedex_screen</item>
    </style>

</resources>