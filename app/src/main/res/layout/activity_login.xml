<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pokedex_red"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_pokeball_white"
            app:tint="@android:color/white"
            android:alpha="0.9"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_pokedex_screen"
            android:padding="24dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDENTIFICAÇÃO"
                android:fontFamily="sans-serif-black"
                android:textColor="#333333"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USUÁRIO"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <EditText
                android:id="@+id/editLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite seu login"
                android:inputType="text"
                android:paddingVertical="12dp"
                android:background="@null"
                android:fontFamily="monospace"
                android:textSize="14sp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCCCCC" android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SENHA"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="******"
                android:inputType="textPassword"
                android:paddingVertical="12dp"
                android:background="@null"
                android:fontFamily="monospace"
                android:textSize="14sp"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCCCCC" android:layout_marginBottom="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="INICIAR SESSÃO"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/btn_pokedex_action"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btnGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ainda não tem conta? Registrar-se"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>