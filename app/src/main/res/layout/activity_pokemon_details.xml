<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="8dp"
    android:orientation="vertical"
    android:background="@color/pokedex_red"
    android:fillViewport="true">

    <include
        android:id="@+id/includeHeader"
        layout="@layout/layout_pokedex_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="400dp"
        android:background="@drawable/bg_pokedex_screen_frame"
        android:orientation="vertical"
        android:paddingHorizontal="38dp"
        android:paddingTop="30dp"
        android:paddingBottom="62dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_style2"
                    android:padding="6dp"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:alpha="0.7"/>

                    <ImageView
                        android:id="@+id/imgPokemon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pokeball" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POKÉMON NAME:"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bulbasaur"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#202020"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginBottom="8dp" />

                <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#CCCCCC" android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TYPE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#666666"/>
                        <TextView
                            android:id="@+id/tvTypes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grass, Poison"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:fontFamily="monospace"
                            android:background="#E0E0E0"
                            android:paddingHorizontal="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABILITY"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#666666"/>
                        <TextView
                            android:id="@+id/tvAbility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overgrow"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:fontFamily="monospace"
                            android:background="#E0E0E0"
                            android:paddingHorizontal="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOVES"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvMoves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- tackle\n- vine whip"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#F5F5F5"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_style1"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EVOLUTION CHAIN"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#555555"
                        android:layout_marginBottom="8dp"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:fadeScrollbars="true"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/layoutEvolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingEnd="16dp"/>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="EDITAR DADOS"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/btn_pokedex_action"
                        android:layout_marginBottom="6dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnDelete"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SOLTAR POKÉMON"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/btn_pokedex_delete" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/layout_pokedex_footer" />

</LinearLayout>